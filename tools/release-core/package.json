{
  "name": "@tikkhun/release-core",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "tikkhun-release": "./dist/cli/main.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx ./src/index.ts",
    "dev:cli": "tsx ./cli/main.ts ",
    "test": "vitest",
    "test:example": "tsx ./cli/main.ts config -c ./release.js",
    "deps:update": "ncu -u"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "release",
    "zip",
    "tar",
    "package.json",
    "pack"
  ],
  "author": "tikkhun",
  "license": "MIT",
  "homepage": "https://github.com/radiorz/project-base/tree/main/tools/release-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/radiorz/project-base"
  },
  "dependencies": {
    "@tikkhun/logger": "workspace:^",
    "@tikkhun/utils-core": "workspace:^",
    "archiver": "^7.0.1",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.15.21",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">=14"
  }
}
